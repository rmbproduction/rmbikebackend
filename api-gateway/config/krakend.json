{
  "version": 3,
  "name": "RepairMyBike API Gateway",
  "$schema": "https://www.krakend.io/schema/v3.json",
  "port": 8080,
  "cache_ttl": "300s",
  "timeout": "3000ms",
  "extra_config": {
    "@cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
      "allow_headers": ["Origin", "Authorization", "Content-Type"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h"
    },
    "@logging": {
      "level": "DEBUG",
      "syslog": false,
      "stdout": true
    },
    "@auth": {
      "disable": false,
      "alg": "HS256",
      "jwk_local_path": "config/jwk.json",
      "cache": true,
      "disable_jwk_security": true,
      "propagate_claims": [
        ["sub", "user_id"],
        ["roles", "roles"]
      ]
    },
    "@rate-limit": {
      "max_rate": 100,
      "strategy": "ip"
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/v1/auth/register",
      "method": "POST",
      "output_encoding": "json",
      "backend": [{
        "url_pattern": "/api/auth/register",
        "encoding": "json",
        "method": "POST",
        "host": ["http://api:8000"]
      }]
    },
    {
      "endpoint": "/api/v1/auth/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [{
        "url_pattern": "/api/auth/login",
        "encoding": "json",
        "method": "POST",
        "host": ["http://api:8000"]
      }]
    },
    {
      "endpoint": "/api/v1/vehicles",
      "method": "GET",
      "output_encoding": "json",
      "backend": [{
        "url_pattern": "/api/vehicles",
        "encoding": "json",
        "method": "GET",
        "host": ["http://api:8000"],
        "extra_config": {
          "@circuit-breaker": {
            "interval": 60,
            "timeout": 10,
            "max_errors": 100,
            "name": "vehicles-cb"
          },
          "@rate-limit/proxy": {
            "max_rate": 100,
            "capacity": 100
          }
        }
      }]
    },
    {
      "endpoint": "/api/marketplace/vehicles/",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "@auth": {
          "disable": true
        }
      },
      "backend": [{
        "url_pattern": "/api/marketplace/vehicles/",
        "encoding": "json",
        "method": "GET",
        "host": ["http://api:8000"],
        "extra_config": {
          "@auth": {
            "disable": true
          }
        }
      }]
    },
    {
      "endpoint": "/api/vehicle/vehicle-types/",
      "method": "GET",
      "output_encoding": "json",
      "backend": [{
        "url_pattern": "/api/vehicle/vehicle-types/",
        "encoding": "json",
        "method": "GET",
        "host": ["http://api:8000"],
        "extra_config": {
          "@auth": {
            "disable": true
          }
        }
      }]
    },
    {
      "endpoint": "/api/repairing_service/subscription-plans/",
      "method": "GET",
      "output_encoding": "json",
      "backend": [{
        "url_pattern": "/api/repairing_service/subscription-plans/",
        "encoding": "json",
        "method": "GET",
        "host": ["http://api:8000"],
        "extra_config": {
          "@auth": {
            "disable": true
          }
        }
      }]
    },
    {
      "endpoint": "/api/repairing_service/cart/*",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "@auth": {
          "disable": true
        }
      },
      "backend": [{
        "url_pattern": "/api/repairing_service/cart/$1",
        "encoding": "json",
        "method": "GET",
        "host": ["http://api:8000"],
        "extra_config": {
          "@auth": {
            "disable": true
          }
        }
      }]
    },
    {
      "endpoint": "/api/repairing_service/cart/*/add/",
      "method": "POST",
      "output_encoding": "json",
      "extra_config": {
        "@auth": {
          "disable": true
        }
      },
      "backend": [{
        "url_pattern": "/api/repairing_service/cart/$1/add/",
        "encoding": "json",
        "method": "POST",
        "host": ["http://api:8000"],
        "extra_config": {
          "@auth": {
            "disable": true
          }
        }
      }]
    },
    {
      "endpoint": "/api/repairing_service/cart/create/",
      "method": "POST",
      "output_encoding": "json",
      "extra_config": {
        "@auth": {
          "disable": true
        }
      },
      "backend": [{
        "url_pattern": "/api/repairing_service/cart/create/",
        "encoding": "json",
        "method": "POST",
        "host": ["http://api:8000"],
        "extra_config": {
          "@auth": {
            "disable": true
          }
        }
      }]
    },
    {
      "endpoint": "/api/v1/marketplace/sell-requests",
      "method": "GET",
      "output_encoding": "json",
      "input_headers": ["Authorization"],
      "backend": [{
        "url_pattern": "/api/marketplace/sell-requests",
        "encoding": "json",
        "method": "GET",
        "host": ["http://api:8000"],
        "extra_config": {
          "@auth/validator": {
            "alg": "HS256",
            "roles": ["user", "admin"],
            "cache": true,
            "operation_debug": true
          }
        }
      }]
    },
    {
      "endpoint": "/api/v1/repairs",
      "method": "POST",
      "output_encoding": "json",
      "input_headers": ["Authorization"],
      "backend": [{
        "url_pattern": "/api/repairs",
        "encoding": "json",
        "method": "POST",
        "host": ["http://api:8000"],
        "extra_config": {
          "@auth/validator": {
            "alg": "HS256",
            "roles": ["user", "admin"],
            "cache": true,
            "operation_debug": true
          },
          "@circuit-breaker": {
            "interval": 60,
            "timeout": 10,
            "max_errors": 50,
            "name": "repairs-cb"
          }
        }
      }]
    }
  ]
} 